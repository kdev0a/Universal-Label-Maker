{
  "manifest_version": 3,
  "name": "Contextual Label Printer",
  "version": "0.1.1", // Increment version
  "description": "Create and print labels contextually from webpages.",
  "permissions": [
    "storage",
    "activeTab"
    // "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html" // <-- ADDED: Link to the options page
}
